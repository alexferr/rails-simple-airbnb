<header>
  <h3>Simple Airbnb</h3>
  <button></button>
</header>

<h1>All our flats (<%= @flats.count %>)</h1>

<div class="content">
  <% @flats.each do |flat| %>
    <div class="flat-cards">
      <h3><%= flat.name %></h3>
      <p> <%= flat.description %> </p>
      <div class="info">
        <div class="guests">
          <i class="fas fa-user-friends"></i>
          <%= flat.number_of_guests %>
        </div>
        <div class="price">
          <i class="fas fa-euro-sign"></i>
          <%= flat.price_per_night %>
        </div>
      </div>
      <div class="card-action-bar">
        <%= link_to 'more info', flat_path(flat), class: "more-info" %>
      </div>
    </div>
  <% end %>
</div>
